<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rnbbusiness.newbase.security.dao.mapper.ResourceMapper">
    <resultMap id="ResourceResultMap" type="com.rnbbusiness.newbase.security.dao.entity.Resource">
        <id column="id" property="id" />
        <result column="resource_url" property="url" />
    </resultMap>


    <select id="findByUrl" resultMap="ResourceResultMap" parameterType="java.lang.String">
        select
          `id`, `resource_url`
        from
          `sys_resource`
        where
          `resource_url` = #{url}
    </select>

    <select id="findRoles" resultType="java.lang.String">
        select
          sys_role.`role_code`
        from
          `sys_role`
        where
          `id` in (
          select
            sys_role_resource.`role_id`
          from
            sys_role_resource
          where
            sys_role_resource.`resource_id` = #{resourceId}
          )
    </select>
</mapper>